@page "/ORGANIZADOR/Gestiones"
@inject NavigationManager _nav
@inject ServicioMenu _servicioMenu
@inject UsuarioServicio _servicioUsuario


<div class="flex-column-customizable">
    <div style="width:85vw;margin-bottom:90px;">
        <BotonAnimado Texto="Inscripciones" Icono="@Util.IconoInscripcion" OnClick="IrInscripciones" />
        <BotonAnimado Texto="Planilleros" Icono="@Util.IconoJugados" OnClick="IrAPlanilleros" />
    </div>

</div>



@code {
    protected async override Task OnInitializedAsync()
    {
        if (!await _servicioUsuario.UsuarioEstaAutorizadoPágina(Util.Roles.ORGANIZADOR.ToString())) _nav.NavigateTo("/");

        _servicioMenu.ActualizarNavegacionPOP(true, false, "/ORGANIZADOR/Principal");
        _servicioMenu.ActualizarTitulo("Gestión");
    }

    private void IrInscripciones()
    {
        _nav.NavigateTo("/ORGANIZADOR/GestorInscripciones");
    }

    private void IrAPlanilleros()
    {
        _nav.NavigateTo("/ORGANIZADOR/GestorPlanilleros");
    }

}